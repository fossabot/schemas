{
  "name": "@retracedgmbh/schemas",
  "version": "1.11.0",
  "license": "UNLICENSED",
  "homepage": "http://retraced.co",
  "repository": "retracedgmbh/schemas",
  "author": "Retraced GmbH",
  "description": "All schemas used for validation that are shared between our projects",
  "scripts": {
    "test": "ava -v",
    "test-ci": "nyc ava -v",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov -t 1abc86ce-bb1e-4152-9d4b-4178dd93ef90",
    "lint": "xo",
    "autofix": "xo --fix"
  },
  "engines": {
    "node": "^12.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "printWidth": 120,
    "useTabs": true
  },
  "xo": {
    "prettier": true
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ]
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "releasedLabels": false
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "branch": "master"
  },
  "dependencies": {
    "ajv": "^6.10.2",
    "i18n-iso-countries": "^4.3.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/commit-analyzer": "^6.3.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/npm": "^5.2.0",
    "@semantic-release/release-notes-generator": "^7.3.0",
    "ava": "^2.4.0",
    "codecov": "^3.6.1",
    "husky": "^3.0.9",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.24",
    "xo": "^0.25.3"
  }
}
