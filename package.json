{
  "name": "@retracedgmbh/schemas",
  "version": "1.0.0-semantic-release",
  "license": "UNLICENSED",
  "homepage": "http://retraced.co",
  "repository": "retracedgmbh/schemas",
  "author": "Retraced GmbH",
  "description": "All schemas used for validation that are shared between our projects",
  "scripts": {
    "test": "xo && best --verbose",
    "lint": "xo",
    "autofix": "xo --fix"
  },
  "engines": {
    "node": "^12.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "printWidth": 120,
    "useTabs": true,
    "jsxBracketSameLine": true
  },
  "xo": {
    "prettier": true,
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none",
          "ignoreRestSiblings": false
        }
      ],
      "ava/no-ignored-test-files": [
        "off",
        {
          "files": [
            "lib/**/*.test.js",
            "utils/**/*.test.js"
          ]
        }
      ],
      "node/prefer-promises/fs": "off",
      "complexity": "off"
    }
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "releasedLabels": false
        }
      ],
      "@semantic-release/git"
    ]
  },
  "dependencies": {
    "@semantic-release/git": "^7.0.16"
  },
  "devDependencies": {
    "@zeit/best": "^0.6.1",
    "ajv": "^6.10.2",
    "husky": "^3.0.9",
    "prettier": "^1.18.2",
    "xo": "^0.25.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
