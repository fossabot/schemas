{
  "name": "@retracedgmbh/schemas",
  "version": "0.0.1",
  "description": "All schemas used for validation that are shared between our projects",
  "scripts": {
    "test": "xo && best --verbose",
    "lint": "xo",
    "autofix": "xo --fix"
  },
  "repository": "retracedgmbh/schemas",
  "author": "Retraced GmbH",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "printWidth": 120,
    "useTabs": true,
    "jsxBracketSameLine": true
  },
  "xo": {
    "prettier": true,
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none",
          "ignoreRestSiblings": false
        }
      ],
      "ava/no-ignored-test-files": [
        "off",
        {
          "files": [
            "lib/**/*.test.js",
            "utils/**/*.test.js"
          ]
        }
      ],
      "node/prefer-promises/fs": "off",
      "complexity": "off"
    }
  },
  "devDependencies": {
    "@zeit/best": "^0.6.1",
    "ajv": "^6.10.2",
    "husky": "^3.0.9",
    "prettier": "^1.18.2",
    "xo": "^0.25.3"
  },
  "publishConfig": {
    "registry":"https://npm.pkg.github.com/"
  }
}
