{
  "name": "@retracedgmbh/schemas",
  "version": "2.0.3",
  "license": "UNLICENSED",
  "homepage": "http://retraced.co",
  "repository": "retracedgmbh/schemas",
  "author": "Retraced GmbH",
  "description": "All schemas used for validation that are shared between our projects",
  "scripts": {
    "test": "ava -v",
    "test-ci": "nyc ava -v -c 2",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && CODECOV_TOKEN=$CODECOV_TOKEN_SCHEMAS codecov",
    "lint": "xo",
    "autofix": "xo --fix"
  },
  "engines": {
    "node": "^12.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "printWidth": 120,
    "useTabs": true
  },
  "xo": {
    "prettier": true
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ]
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "breaking",
              "release": "major"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "releasedLabels": false
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "branch": "master"
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "timezone": "Europe/London",
    "schedule": "before 3am",
    "automerge": true,
    "commitMessagePrefix": "chore: ",
    "commitMessageAction": "Upgrade",
    "commitMessageSuffix": ":seedling:",
    "packageRules": [
      {
        "packagePatterns": [
          "^@semantic-release"
        ],
        "groupName": "semantic-release packages"
      }
    ]
  },
  "dependencies": {
    "ajv": "6.10.2",
    "i18n-iso-countries": "4.3.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/commit-analyzer": "7.0.0",
    "@semantic-release/git": "8.0.0",
    "@semantic-release/npm": "6.0.0",
    "@semantic-release/release-notes-generator": "7.3.5",
    "ava": "2.4.0",
    "codecov": "3.6.1",
    "husky": "4.0.4",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "semantic-release": "16.0.0",
    "xo": "0.25.3"
  }
}
